<Window x:Class="Aeronautica.Windows.WindowAeroporto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aeronautica.Windows"
        mc:Ignorable="d"
        Title="WindowAeroporto"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F0F8FF">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!-- Nova linha para barra de progresso -->
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Gestão de Aeroportos"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#1E3A8A"
                   Margin="0 0 0 10" />

        <!-- Barra de progresso -->
        <ProgressBar x:Name="BarraProgresso"
                     Grid.Row="1"
                     Height="10"
                     Margin="0 0 0 10"
                     IsIndeterminate="True"
                     Visibility="Collapsed"
                     Foreground="#1E3A8A" />

        <DataGrid x:Name="TabelaAeroportos"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0 0 0 20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding IdAeroporto}"
                                    Width="Auto" />
                <DataGridTextColumn Header="Nome"
                                    Binding="{Binding Nome}"
                                    Width="*" />
                <DataGridTextColumn Header="Código"
                                    Binding="{Binding CodigoLIS}"
                                    Width="*" />
                <DataGridTextColumn Header="País"
                                    Binding="{Binding Pais}"
                                    Width="*" />
                <DataGridTextColumn Header="Cidade"
                                    Binding="{Binding Cidade}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 10 0 0">
            <Button Content="Criar"
                    Width="150"
                    Height="40"
                    Background="#1E3A8A"
                    Foreground="White"
                    Margin="10,0"
                    Click="Criar_Click" />
            <Button Content="Editar"
                    Width="150"
                    Height="40"
                    Background="#1E3A8A"
                    Foreground="White"
                    Margin="10,0"
                    Click="Editar_Click" />
            <Button Content="Apagar"
                    Width="150"
                    Height="40"
                    Background="#DC2626"
                    Foreground="White"
                    Margin="10,0"
                    Click="Apagar_Click" />
        </StackPanel>
    </Grid>
</Window>
