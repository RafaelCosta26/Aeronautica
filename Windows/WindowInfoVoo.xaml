<Window x:Class="Aeronautica.Windows.WindowInfoVoo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Aeronautica.Windows"
        mc:Ignorable="d"
        Title="WindowInfoVoo"
        Height="500"
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#F0F8FF"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <!-- 🎨 Recursos da Janela -->
    <Window.Resources>
        <!-- Animação da Barra de Progresso -->
        <Style x:Key="LoadingBarStyle"
               TargetType="ProgressBar">
            <Setter Property="Foreground"
                    Value="#1E3A8A" />
            <Style.Triggers>
                <Trigger Property="Visibility"
                         Value="Visible">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="Value"
                                                 From="0"
                                                 To="100"
                                                 Duration="0:0:1"
                                                 AutoReverse="True" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Barra de Progresso -->
        <ProgressBar x:Name="BarraProgresso"
                     Height="10"
                     Margin="0 0 0 10"
                     Style="{StaticResource LoadingBarStyle}"
                     Visibility="Collapsed"
                     Minimum="0"
                     Maximum="100" />

        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    Margin="0 10">

            <TextBlock Text="Avião:"
                       FontWeight="Bold" />
            <ComboBox x:Name="ComboAviao"
                      Margin="0 0 0 10" />

            <TextBlock Text="Data Partida:"
                       FontWeight="Bold" />
            <xctk:DateTimePicker x:Name="TextDataPartida"
                                 Margin="0 0 0 10" />

            <TextBlock Text="Hora Partida:"
                       FontWeight="Bold" />
            <TextBox x:Name="TextHoraPartida"
                     Margin="0 0 0 10" />

            <TextBlock Text="Data Chegada:"
                       FontWeight="Bold" />
            <xctk:DateTimePicker x:Name="TextDataChegada"
                                 Margin="0 0 0 10" />

            <TextBlock Text="Hora Chegada:"
                       FontWeight="Bold" />
            <TextBox x:Name="TextHoraChegada"
                     Margin="0 0 0 10" />

            <CheckBox x:Name="CheckRefeicao"
                      Content="Refeição Incluída"
                      Margin="0 0 0 10" />

            <TextBlock Text="Preço Económico:"
                       FontWeight="Bold" />
            <xctk:DecimalUpDown x:Name="TextPrecoEcon"
                                Margin="0 0 0 10" />

            <TextBlock Text="Preço Executivo:"
                       FontWeight="Bold" />
            <xctk:DecimalUpDown x:Name="TextPrecoExec"
                                Margin="0 0 0 10" />
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 10">
            <Button Content="Guardar"
                    Width="120"
                    Background="#1E3A8A"
                    Foreground="White"
                    Click="Guardar_Click" />

            <Button x:Name="BotaoApagar"
                    Content="Apagar Voo"
                    Width="100"
                    Click="Apagar_Click"
                    Background="DarkRed"
                    Foreground="White"
                    Padding="10,5" />
        </StackPanel>
    </Grid>
</Window>
