<Window x:Class="Aeronautica.Windows.WindowVoos"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aeronautica.Windows"
        Closing="Window_Closing"
        mc:Ignorable="d"
        Title="Criar Voo"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#F0F8FF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1"
                    Margin="40"
                    Background="White"
                    Padding="30"
                    CornerRadius="10"
                    BorderBrush="#1E3A8A"
                    BorderThickness="1">
                <StackPanel Width="600"
                            VerticalAlignment="Top">

                    <TextBlock Text="Criar Voo"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1E3A8A"
                               Margin="0 0 0 20" />

                    <!-- Aeroporto Partida -->
                    <TextBlock Text="Aeroporto Partida:"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />
                    <ComboBox x:Name="ComboAeroportoPartida"
                              FontSize="14"
                              Height="30"
                              DisplayMemberPath="Nome"
                              SelectedValuePath="IdAeroporto"
                              SelectionChanged="ComboAeroportoPartida_SelectionChanged"
                              Margin="0,0,0,15" />

                    <!-- Aeroporto Destino -->
                    <TextBlock Text="Aeroporto Destino:"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />
                    <ComboBox x:Name="ComboAeroportoDestino"
                              FontSize="14"
                              Height="30"
                              DisplayMemberPath="Nome"
                              SelectedValuePath="IdAeroporto"
                              Margin="0,0,0,15" />

                    <!-- Avião -->
                    <TextBlock Text="Avião:"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />
                    <ComboBox x:Name="ComboAvioes"
                              FontSize="14"
                              Height="30"
                              DisplayMemberPath="Nome"
                              SelectedValuePath="IdAviao"
                              Margin="0,0,0,15" />

                    <TextBlock Text="Data Partida:"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />
                    <DatePicker x:Name="DataPartidaPicker"
                                FontSize="14"
                                Height="30"
                                Margin="0,0,0,15" />

                    <TextBlock Text="Hora Partida:"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />

                    <xctk:TimePicker x:Name="HoraPartidaTimePicker"
                                     Format="Custom"
                                     FormatString="HH:mm:ss"
                                     Width="200"
                                     Height="30"
                                     Margin="0,0,0,10" />

                    <TextBlock Text="Data Chegada:"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />
                    <DatePicker x:Name="DataChegadaPicker"
                                FontSize="14"
                                Height="30"
                                Margin="0,0,0,15" />

                    <TextBlock Text="Hora Chegada:"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />

                    <xctk:TimePicker x:Name="HoraChegadaTimePicker"
                                     Format="Custom"
                                     FormatString="HH:mm:ss"
                                     Width="200"
                                     Height="30"
                                     Margin="0,0,0,10" />

                    <CheckBox x:Name="RefeicaoIncluidaCheckBox"
                              Content="Refeição Incluída"
                              FontSize="14"
                              Margin="0,0,0,15" />

                    <!-- Preço Econômico -->
                    <TextBlock Text="Preço Econômico (€):"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />
                    <xctk:DecimalUpDown x:Name="PrecoEconomicoUpDown"
                                        FontSize="14"
                                        Height="30"
                                        Margin="0,0,0,15"
                                        Minimum="0"
                                        Maximum="100000"
                                        Increment="1"
                                        FormatString="F2" />

                    <!-- Preço Executivo -->
                    <TextBlock Text="Preço Executivo (€):"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />
                    <xctk:DecimalUpDown x:Name="PrecoExecutivoUpDown"
                                        FontSize="14"
                                        Height="30"
                                        Margin="0,0,0,25"
                                        Minimum="0"
                                        Maximum="100000"
                                        Increment="1"
                                        FormatString="F2" />

                    <Button Content="Criar Voo"
                            Width="200"
                            Height="35"
                            FontSize="14"
                            Background="#1E3A8A"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            Click="CriarVoo_ClickAsync" />
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>